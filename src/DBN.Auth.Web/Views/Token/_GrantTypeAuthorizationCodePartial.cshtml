@model TokenViewModelAuthorizationCode

@using (Html.BeginForm("AuthorizationCode", "Token", FormMethod.Post))
{
    @Html.HiddenFor(m => m.GrantType)

    <tr>
        <td>@Html.LabelFor(m => m.RedirectUri)</td>
        <td>
            @Html.TextBoxFor(m => m.RedirectUri)
        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Code)</td>
        <td>
            <div style="display: flex">
                @Html.TextBoxFor(m => m.Code)
            </div>

        </td>
    </tr>

    <tr>
        <td></td>
        <td>
            <input type="submit" name="command" value="get token" />
        </td>
    </tr>
}